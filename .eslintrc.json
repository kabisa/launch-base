{
  "parser": "babel-eslint",

  "parserOptions": {
    "sourceType": "module"
  },

  "env": {
    "amd": true,
    "browser": true,
    "es6": true
  },

  "extends": "airbnb",

  "rules": {
    "max-len": [
      2,    // treat max-len violations as errors
      140,  // allow 140 characters per line
      2     // assume 2 space indentation
    ]
  }
}
