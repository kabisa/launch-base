#!/usr/bin/env ruby
require 'pathname'

source_path = (Pathname.new(__FILE__).dirname + '../lib').expand_path
$LOAD_PATH << source_path

require 'launch_base'

if ARGV.empty?
  puts 'Please provide a path for the new application'
  exit 0
elsif ['-v', '--version'].include? ARGV[0]
  puts LaunchBase::VERSION
  exit 0
end

templates_root = File.expand_path(File.join('..', 'templates'), File.dirname(__FILE__))
LaunchBase::AppGenerator.source_root templates_root
LaunchBase::AppGenerator.source_paths << Rails::Generators::AppGenerator.source_root << templates_root

LaunchBase::AppGenerator.start
